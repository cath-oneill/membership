<h4><strong>Note for Member:</strong> <%= @member.first_name %> <%= @member.last_name %></h4>


<%= form_for([@member, @note]) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field small-12 columns medium-8">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field small-12 columns medium-4">
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </div>
  <div class="actions columns small-12">
    <%= f.submit class: "button radius success" %>
  </div>
<% end %>
