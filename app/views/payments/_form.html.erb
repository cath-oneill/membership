<p><strong>Payment for Member:</strong> <%= @member.first_name %> <%= @member.last_name %></p>

<%= form_for([@member, @payment]) do |f| %>
  <% if @payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% @payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="field columns small-4">
      <%= f.label :date %><br>
      <%= f.date_field :date %>
    </div>
    <div class="field columns small-4 end">
      <%= f.label :amount %><br>
      <%= f.text_field :amount %>
    </div>    
  </div>
  <div class="row">
    <div class = "field columns small-4">
      <%= f.label :dues %><br>
      <%= f.select :dues, options_for_select([
          ["Dues Payment", true],
          ["Non-Dues Payment", false] ]) %>    
    </div>
    <div class="field columns small-4">
      <%= f.label :note %><br>
      <%= f.text_area :note %>
    </div>
    <div class="actions button-down-4">
      <%= f.submit class: "radius small right" %>
    </div>    
  </div>
<% end %>
