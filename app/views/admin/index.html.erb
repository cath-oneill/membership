<h1>Listing Admin Users</h1>
<h3>This page is for creating and removing administrators who can access this website.  Be very, very careful!</h3>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Admin Since:</th>
      <th>Most Recent Sign In:</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_date %></td>
        <td><%= user.current_sign_in_at.to_date unless user.current_sign_in_at.nil? %></td>
        <td><%= link_to 'Destroy', admin_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Create A New Admin User:</h3>
<%= form_for(@new_user, url: admin_index_path) do |f| %>
  <% if @new_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@new_user.errors.count, "error") %> prohibited this administrator from being saved:</h2>

      <ul>
      <% @new_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
