<p class="alert-box radius alert">This page is for updating system-wide settings.  Be very, very careful!</p>
<h4>Settings</h4>

<% @settings.each do |setting| %>
  <%= form_for(setting) do |f| %>
  <div class="row">
    <div class="field small-10 columns">
      <div class="small-2 columns">
        <%= f.label setting.lookup, class: "left"%><br>
      </div>
      <div class="small-9 columns end">
        <%= f.text_field setting.lookup, value: setting.value %>
      </div>
    </div>  
    <div class="actions columns small-2">
      <%= f.submit "Update", class: "button radius success tiny" %>
    </div>
  </div>
  <% end %>
<% end %>

