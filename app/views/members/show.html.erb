<h1><%= @member.first_name %>'s Payments:</h1>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Type</th>
      <th>Note</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @member.payments.each do |payment| %>
      <tr>
        <td><%= payment.date %></td>
        <td>$<%= payment.amount %></td>
        <td><%= payment.kind.capitalize %></td>
        <td><%= payment.note %></td>
        <td><%= link_to 'Edit Payment', edit_member_payment_path(@member, payment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1><%= @member.first_name %>'s Notes:</h1>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Date</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @member.notes.each do |note| %>
      <tr>
        <td><%= note.content %></td>
        <td><%= note.date %></td>
        <td><%= link_to 'Edit', edit_member_note_path(@member, note) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit Member Information', edit_member_path(@member) %> |
