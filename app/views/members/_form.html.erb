<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="columns small-12 medium-6 large-4 border-right" >
      <h5>Required Member Information</h5>
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :first_name, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.text_field :first_name, required: true %>
        </div>
      </div>
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :last_name, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.text_field :last_name, required: true %>
        </div>
      </div>
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :title, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.text_field :title, placeholder: "Not Required" %>
        </div>
      </div>   
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :employer, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.text_field :employer, :required => true %>
        </div>
      </div>
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :occupation, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.text_field :occupation, :required => true %>
        </div>
      </div>        
    </div>

    <div class="columns small-12 medium-6 large-4">
      <h5>Contact Information</h5>
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :email, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.email_field :email %>
        </div>
      </div>
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :email2, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.email_field :email2 %>
        </div>
      </div>  
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :cell_phone, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.telephone_field :cell_phone %>
        </div>
      </div>
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :home_phone, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.telephone_field :home_phone %>
        </div>
      </div>
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :work_phone, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.telephone_field :work_phone %>
        </div>
      </div>
    </div>

    <div class="columns small-12 medium-6 large-4">
      <h5>Optional Information</h5>
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :tag_list, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.text_field :tag_list %>       
          <p>Enter tags separated by commas.</p>
        </div>
      </div> 
      <div class="field row">
        <div class="small-4 columns">
          <%= f.label :dues_paid, class: "right"%><br>
        </div>
        <div class="small-8 columns end">
          <%= f.date_field :dues_paid %>
          <p>Will override the automatic calculation of dues paid date.</p>     
        </div>
      </div> 
      <br><br>   
      <div class="actions row">
        <%= f.submit class: "button radius success right" %>
      </div>
    </div>
    
  
  </div>
  
<% end %>
